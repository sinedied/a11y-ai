{
  "name": "a11y-ai",
  "version": "0.10.0",
  "description": "Experimental tool to automatically detect accessibility issues in web pages using OpenAI and provide suggestions for fixing them",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/a11y-ai"
  },
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "a11y-ai": "./bin/a11y-ai.js",
    "a11y": "./bin/a11y-ai.js"
  },
  "scripts": {
    "start": "node ./bin/a11y-ai.js",
    "build": "npm run clean -s && tsc",
    "build:watch": "tsc -w --sourceMap",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "xo",
    "clean": "rm -rf lib *.tgz",
    "release:check": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/diff": "^5.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.14.1",
    "@types/update-notifier": "^6.0.2",
    "semantic-release": "^20.1.0",
    "semantic-release-npm-github": "^3.0.0",
    "typescript": "^4.9.5",
    "xo": "^0.53.1"
  },
  "dependencies": {
    "@axe-core/cli": "^4.6.0",
    "@dqbd/tiktoken": "^1.0.6",
    "ansi-to-html": "^0.7.2",
    "chalk": "^5.2.0",
    "chromedriver": "^111.0.0",
    "debug": "^4.3.4",
    "diff": "^5.1.0",
    "fast-glob": "^3.2.12",
    "got": "^12.5.3",
    "jsdiff": "^1.1.1",
    "minimist": "^1.2.8",
    "ora": "^6.1.2",
    "update-notifier": "^6.0.2"
  },
  "keywords": [
    "accessibility",
    "openai",
    "cli",
    "fix",
    "ai"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/a11y-ai",
  "bugs": {
    "url": "https://github.com/sinedied//a11y-ai/issues"
  },
  "license": "MIT",
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin",
    "lib"
  ]
}
